<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/k"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="114dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/r"
        android:textSize="40sp" />


    <Button
        android:id="@+id/btn_menu_1"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/bg_hover3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_menu_2"
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:background="@drawable/bg_hover2" />
    <Button
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:id="@+id/btn_menu_3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_hover"
        android:layout_marginTop="280dp"/>
    <Button
        android:layout_width="221dp"
        android:layout_height="42dp"
        android:id="@+id/btn_menu_4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="345dp"
        android:background="@drawable/bg_hover1"/>


    <TextView
        android:layout_width="180dp"
        android:layout_height="74dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:background="@drawable/logo" />



</RelativeLayout>